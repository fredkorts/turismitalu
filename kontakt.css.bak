body
{
	height: 100%;
	width: 100%;
	margin: 0;
	padding: 0;
	background-size: cover !important;
	background-attachment: fixed;
}
/*--------FLAGS STARTS--------*/
#flags
{
	width: 100%;
	height: 3%;
}

#flags ul
{
	list-style-type: none;
	margin: 0;
	padding: 0;
	width: 100%;
	height: 100%;
}

#flags ul li
{
	display: inline;
	margin-left: 10px;
}

#flags img
{
	height: 100%;
}
/*--------FLAGS ENDS--------*/

/*--------NAVIGATION STARTS--------*/

#navigation
{
	width: 100%;
	height: 5%;
}

#navigation ul
{
	list-style-type: none;
	margin: 0 auto;
	padding: 0;
	text-align: center;
	width: 900px;
	height: 100%;
}

#navigation ul li
{
	display: inline-block;
	margin-left: 10px;
	color: white;
	margin-top: 10px;
	margin-left:30px;
}

#navigation a
{
	font-size: 25px;
	font-family: 'Droid Sans';
	font-weight: bold;
	text-decoration: none;
	color: black;
}
/*--------NAVIGATION ENDS--------*/

#top_fence
{
	width: 100%;
	height: 3%;
}
#heading
{
	width: 200px;
	height: 4%;
	font-family: 'Droid Sans';
	font-size: 26px;
	border-bottom: 2px solid gray;
}
#map_wrapper
{
	width: 900px;
	height: 400px;
	margin: 0 auto;
}
#map
{
	width: 500px;
	height: 400px;
	float: left;
}
#kontakt_info
{
	width: 380px;
	height: 400px;
	float: right;
	font-family: 'Droid Serif';
}
#contact
{
	background: gray;
	bottom: 0;
	height: 9%;
	position: fixed;
	right: 0;
	width: 100%;
}
#info
{
	height: 50px;
	margin: 0 auto;
	width: 800px;
}
